@inject DatabaseService DatabaseService;
@page "/registro"

<h1 id = "register-page">Alta de funcionario</h1>

<form >
    <label>Cédula de identidad</label> 
    <input type="text" name="ci" id="ci" placeholder="Ingrese su cedula" @bind="ci">
    <label>Nombre</label> 
    <input type="text" name="nombre" id="nombre" placeholder="Ingrese su nombre" @bind="nombre">
    <label>Apellido</label>
    <input type="text" name="apellido" id="apellido" placeholder="Ingrese su apellido" @bind="apellido">
    <label>Fecha de nacimiento</label>
    <input type="date" name="fechaN" id="FechaN" placeholder="Ingrese su fecha de nacimiento" @bind="fechaN"> 
    <hr> 
    <label for="tieneCarnetSalud">¿Tiene carnet de salud vigente?</label><br>
        <div id="opcionesCarnetSalud" class = "form-check">
            <input class="form-check-input" type="checkbox" id="carnetSi" @bind="mostrarSubirDocumento" /> Si
            <br>
            <input class="form-check-input" type="checkbox" id="carnetNo" @bind="mostrarAgendarCita" /> No
        </div>
        @if (mostrarSubirDocumento)
        {
        <div id="subirDocumento">
            <input type="file" id="documentoInput" name="documentoInput">
        </div>
        }
        @if (mostrarAgendarCita){
        <div id="agendarCita">
            <a href="/RegistroAgenda">Agendar Cita</a>
        </div>
        }
    <hr>
    <label>Ingrese su domicilio completo</label> 
    <input type="text" name="domicilioCompleto" id="domicilioCompleto" placeholder="Ingrese su domicilio de residencia" @bind="domicilioCompleto"> 
    <label>Ingrese su correo electrónico</label> 
    <input type="text" name="correo" id="correo" placeholder="Ingrese su correo electrónico" @bind="correo"> 
    <label>Ingrese su teléfono de contacto</label>
    <input type="text" name="telefono" id="telefono" placeholder="Ingrese su teléfono" @bind="telefono"> 
    <button id="botonRegistro" type="submit" class="btn btn-primary">Registrarse</button>
</form>

@code{
    private bool mostrarSubirDocumento = false;
    private bool mostrarAgendarCita = false;
    private string ci = "";
    private string nombre = "";
    private string apellido = "";
    private DateTime fechaN;
    private string domicilioCompleto = "";
    private string correo = "";
    private int telefono;
}



